print ('before loop')
for x in range (0 ,10):
    print ("x value is : " + str(x))

print('after loop')


print ('before loop')
for x in range (0 ,10, 1):
    print ("x value is : " + str(x))

print('after loop')





#iteration = for each
f1teamslist = ["Ferrari", "Mercedes", "Red Bull", "Williams"]
for team in f1teamslist:
    print("f1 team list include: " + team)

print ("before loop")

myString = "hfhahwhahfhawhashahwhfhah"
for char in myString:
    print (char.upper())

print("after loop")




originalValue = "Mercedes"

print ("originalValue = " + originalValue)
newValue = ""

for x in  originalValue:
    newValue = x + newValue

print ("newValue = " + newValue)

print (originalValue[::-1])


