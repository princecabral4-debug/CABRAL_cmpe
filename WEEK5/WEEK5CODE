#Comparison Operator
a = 10
b = 16
isEqual = (a == b)
print(isEqual)
isEqual = (a <= b)
print(isEqual)
isEqual = (a >= b)
print(isEqual)

result = 10 **12
print(result)

#membership operator

isIn = (9 in [23, 14, 34, 9, 28, 56])
print(isIn)
isIn = (9 in [23, 14, 34, 91, 28, 56])
print(isIn)

isIs = ("forever" == "us")
print(isIs)
isIs = ("us" == "forever")
print(isIs)
isIs = ("No us" == "No us")
print(isIs)
