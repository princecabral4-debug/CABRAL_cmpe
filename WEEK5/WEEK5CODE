strInput = "123JhonLhynher123 Ferrer2345678909876543234567898765432345678"

newString = ""
for char in strInput:
    if not char.isnumeric():
        newString = newString + char

print(newString)

#Numerical integer (-3,0,562) float (23.23252) complex number (45 + 25i)
#i = amphere, j = imaginary resistance 25 + j25 = inpedance

myIntegerA = 25
myIntegerB = 15
myFloatA = 25.45
myFloatB = 14.55
myComplexA = 25 - 3j
myComplexB = 10 - 12j

#+, -, /, *
sum = myIntegerA + myIntegerB
print(sum)
difference = myIntegerA - myIntegerB
print(difference)
product = myIntegerA * myIntegerB
print(product)
qoutient = myIntegerA / myIntegerB
print(qoutient)
Roundedqoutient = round(qoutient, 2)
print(Roundedqoutient)

remainder =myIntegerA % myIntegerB
print(remainder)

#PEMDAS
myComprod = myComplexA * myComplexB
print(myComprod)


import math

kurtAngle = math.sin(90)
print(kurtAngle)

kurtAngle = math.degrees(math.cos(90))
print(kurtAngle)

print(math.factorial(100))

cos_90_deg = math.cos(math.radians(45))
print(cos_90_deg)

